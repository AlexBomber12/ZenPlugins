<?xml version="1.0" encoding="utf-8"?>
<preferences>
  <!-- Логин в интернет-банке -->
  <EditTextPreference
        key="login"
        title="User ID"
        summary="Номер клиента Fineco"
        inputType="textEmailAddress"/>

  <!-- Пароль / PIN -->
  <EditTextPreference
        key="password"
        title="Password"
        summary="Ваш пароль Fineco"
        inputType="textPassword" />

  <!-- Начальная дата синхронизации -->
  <EditTextPreference
        key="fromDate"
        title="Sync from (YYYY-MM-DD)"
        summary="С какой даты загружать операции"
        inputType="date" />

  <!-- Переключатель песочницы, чтобы тестировать без живого счета -->
  <CheckBoxPreference
        key="sandbox"
        title="Use Fineco PSD2 sandbox?"
        defaultValue="false" />
</preferences>
