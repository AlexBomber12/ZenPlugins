<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen>
	<EditTextPreference
		title="Номер карты ВТБ или логин (УНК)"
		dialogTitle="Номер карты ВТБ или логин (УНК)"
		positiveButtonText="ОК"
		negativeButtonText="Отмена"
		summary="||{@s}"
		obligatory="true"
		key="login">
	</EditTextPreference>
	<EditTextPreference
		key="password"
		title="Пароль"
		dialogTitle="Пароль"
		positiveButtonText="ОК"
		negativeButtonText="Отмена"
		summary="||***********"
		obligatory="true"
		inputType="textPassword">
	</EditTextPreference>
    <EditTextPreference
        key="startDate"
        obligatory="true"
        inputType="date"
        title="С какой даты загружать операции"
        defaultValue="2018-04-01T00:00:00.000Z"
        dialogTitle="Дата начала загрузки"
        positiveButtonText="ОК"
        negativeButtonText="Отмена"
        summary="|startDate|{@s}">
    </EditTextPreference>
</PreferenceScreen>
