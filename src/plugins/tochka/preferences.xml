<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen>
    <ListPreference
        key="server"
        dialogTitle="Выбор сервера"
        dialogMessage="Для входа в виртуальную песочницу: логин и пароль – sandbox, код – 12345."
        title="Выбор сервера"
        entries="Виртуальная песочница|Сервер банка" entryValues="sandbox|tochka"
        defaultValue="sandbox"
        positiveButtonText="ОК"
        negativeButtonText="Отмена"
        summary="|Виртуальная песочница|{@s}">
    </ListPreference>
    <EditTextPreference
        key="startDate"
        obligatory="true"
        inputType="date"
        title="С какой даты загружать операции"
        defaultValue="2018-04-01T00:00:00.000Z"
        dialogTitle="Дата начала загрузки"
        dialogMessage="Введите дату, с которой загружать операции"
        positiveButtonText="ОК"
        negativeButtonText="Отмена"
        summary="|startDate|{@s}">
    </EditTextPreference>
</PreferenceScreen>
